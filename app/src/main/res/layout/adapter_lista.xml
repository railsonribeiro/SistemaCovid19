<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_n_pac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="PACIENTE N°"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_foto_pac"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_foto_pac"
        android:layout_width="109dp"
        android:layout_height="142dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pacient_male" />

    <TextView
        android:id="@+id/tv_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Nome: "
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/iv_foto_pac"
        app:layout_constraintTop_toBottomOf="@+id/tv_comorbidade" />

    <TextView
        android:id="@+id/tv_telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        android:text="Telefone: "
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tv_cpf"
        app:layout_constraintTop_toBottomOf="@+id/tv_nome" />

    <TextView
        android:id="@+id/tv_data_nasc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        android:text="Data de nascimento: "
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/iv_foto_pac"
        app:layout_constraintTop_toBottomOf="@+id/tv_telefone" />

    <TextView
        android:id="@+id/tv_rua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Rua: "
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_foto_pac" />

    <TextView
        android:id="@+id/tv_numero_casa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Nº da casa: "
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tv_rua"
        app:layout_constraintTop_toBottomOf="@+id/iv_foto_pac" />

    <TextView
        android:id="@+id/tv_cpf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        android:text="CPF: "
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/iv_foto_pac"
        app:layout_constraintTop_toBottomOf="@+id/tv_nome" />

    <TextView
        android:id="@+id/tv_bairro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        android:text="Bairro: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_rua" />

    <TextView
        android:id="@+id/tv_cidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        android:text="Cidade: "
        app:layout_constraintStart_toEndOf="@+id/tv_bairro"
        app:layout_constraintTop_toBottomOf="@+id/tv_rua" />

    <TextView
        android:id="@+id/tv_sigla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        android:text="Sigla: "
        app:layout_constraintStart_toEndOf="@+id/tv_cidade"
        app:layout_constraintTop_toBottomOf="@+id/tv_numero_casa" />

    <TextView
        android:id="@+id/tv_cep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        android:text="CEP: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bairro" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        android:text="email: "
        app:layout_constraintStart_toEndOf="@+id/tv_cep"
        app:layout_constraintTop_toBottomOf="@+id/tv_cidade" />

    <TextView
        android:id="@+id/tv_comorbidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Comorbidade: "
        app:layout_constraintStart_toEndOf="@+id/iv_foto_pac"
        app:layout_constraintTop_toBottomOf="@+id/tv_n_pac" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="-8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@+id/tv_email" />

</androidx.constraintlayout.widget.ConstraintLayout>